<?xml version="1.0"?>
<applications>
	<!-- IoT数据收集应用 - 延迟要求放宽 -->
	<application name="IoT_Data_Collection">
		<type>sensing</type>
		<rate>4</rate>
		<usage_percentage>35</usage_percentage>
		<latency>15.0</latency>
		<container_size>8</container_size>
		<request_size>4</request_size>
		<results_size>2</results_size>
		<task_length>80</task_length>
	</application>
	
	<!-- 紧急响应应用 - 大幅放宽延迟 -->
	<application name="Emergency_Response">
		<type>real-time</type>
		<rate>1</rate>
		<usage_percentage>5</usage_percentage>
		<latency>5.0</latency>
		<container_size>40</container_size>
		<request_size>25</request_size>
		<results_size>8</results_size>
		<task_length>600</task_length>
	</application>
	
	<!-- 无人机导航控制 - 现实延迟要求 -->
	<application name="UAV_Navigation">
		<type>real-time</type>
