		<usage_percentage>10</usage_percentage>
		<latency>8.0</latency>
		<container_size>25</container_size>
		<request_size>15</request_size>
		<results_size>6</results_size>
		<task_length>400</task_length>
	</application>
	
	<!-- 环境监测 - 延迟要求宽松 -->
	<application name="Environmental_Monitoring">
		<type>sensing</type>
		<rate>3</rate>
		<usage_percentage>25</usage_percentage>
		<latency>20.0</latency>
		<container_size>15</container_size>
		<request_size>8</request_size>
		<results_size>3</results_size>
		<task_length>200</task_length>
